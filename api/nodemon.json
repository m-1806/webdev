// Used to configure nodemon to watch for changes in the api folder and restart the server when changes are detected.
{
  "restartable": "rs",
  "ignore": [
    ".git",
    "./node_modules/**"
  ],
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "DB_ENABLE_LOGGING": "false",
    "ENABLE_GLOBAL_ERROR_LOGGING": "false"
  },
  "ext": "js"
}